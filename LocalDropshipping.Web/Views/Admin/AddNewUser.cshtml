@{
    Layout = "_LayoutDashboard";
}
@model UserViewModel;
<!-- New User start -->
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-sm-8 m-auto">
                    <div class="card">
                        <div class="card-body">
                            <div class="title-header option-title">
                                <h5>Add New User</h5>
                            </div>
                            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" id="pills-home-tab"
                                            data-bs-toggle="pill" data-bs-target="#pills-home"
                                            type="button">
                                        Account
                                    </button>
                                </li>
                            </ul>

                            <div class="tab-content" id="pills-tabContent">
                                <div class="tab-pane fade show active" id="pills-home" role="tabpanel">

                                    <form asp-action="AddNewUser" asp-controller="Admin" method="post" class="theme-form theme-form-2 mega-form">
                                        <div class="card-header-1">
                                            <h5>Product Information</h5>
                                        </div>

                                        <div class="row">
                                            <div class="mb-4 row align-items-center">
                                                <label class="form-label-title col-lg-2 col-md-3 mb-0">
                                                    User Name
                                                </label>
                                                <div class="col-md-9 col-lg-10">
                                                    <input class="form-control" type="text" asp-for="UserName">
                                                </div>
                                            </div>

                                            <div class="mb-4 row align-items-center">
                                                <label class="col-lg-2 col-md-3 col-form-label form-label-title">
                                                    Email Address
                                                </label>
                                                <div class="col-md-9 col-lg-10">
                                                    <input class="form-control" type="email" asp-for="Email">
                                                </div>
                                            </div>

                                            <div class="mb-4 row align-items-center">
                                                <label class="col-lg-2 col-md-3 col-form-label form-label-title">Password</label>
                                                <div class="col-md-9 col-lg-10">
                                                    <input class="form-control" type="password" asp-for="Password">
                                                </div>
                                            </div>

                                            <div class="row align-items-center">
                                                <label class="col-lg-2 col-md-3 col-form-label form-label-title">
                                                    Confirm Password
                                                </label>
                                                <div class="col-md-9 col-lg-10">
                                                    <input class="form-control" type="password" asp-for="ConfirmPassword">
                                                </div>
                                            </div>

                                            <div class="mb-4 row align-items-center">
                                                <label class="col-lg-2 col-md-3 col-form-label form-label-title">Add User Role</label>
                                                <div class="col-md-9">
                                                    <form class="radio-section">
                                                        <label>
                                                            <input type="radio" name="opinion" checked>
                                                            <i></i>
                                                            <span>Staff Member</span>
                                                        </label>

                                                        <label>
                                                            <input type="radio" name="opinion" />
                                                            <i></i>
                                                            <span>Seller</span>
                                                        </label>
                                                    </form>

                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <button class="btn btn-animation w-100 justify-content-center" type="submit">
                                                    Click Here To Add
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- New User End -->
