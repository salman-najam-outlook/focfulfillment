@model SellerUpdatePasswordViewModel
<!DOCTYPE html>
<html>
<head>
    <title>Change Password</title>
</head>
<body>
    <section class="log-in-section background-image-2 section-b-space">
        <div class="container-fluid-lg w-100">
            <div class="row">

                <div class="col-xxl-4 col-xl-5 col-lg-6 col-sm-8 mx-auto">
                    <div class="log-in-box">
                        <div class="log-in-title">
                            <h3>Welcome To Fastkart</h3>
                            <h4>Change Password</h4>
                        </div>

                        <div class="input-box">
                            <form asp-action="UpdateSellerPassword" asp-controller="Seller" class="row g-4">
                                <div class="col-12">
                                    <div class="form-floating theme-form-floating log-in-form">
                                        <input asp-for="NewPassword" class="form-control" id="newPassword" placeholder="Email Address">
                                        <label>New Password:</label>
                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-floating theme-form-floating log-in-form">
                                        <input asp-for="RepeatPassword" class="form-control" id="confirmPassword" placeholder="Email Address">
                                        <label>Confirm New Password:</label>
                                        <span asp-validation-for="RepeatPassword" class="text-danger"></span>
                                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="forgot-box">
                                        <a href="forgot.html" class="forgot-password">Forgot Password?</a>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <button class="btn btn-animation w-100 justify-content-center" type="submit">
                                        Change Password

                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
<script>
    function showSuccessMessageAndRedirect() {
        alert("Your password has been successfully updated. Please login again.");

        setTimeout(function () {
            window.location.href = "/Seller/Login";
        }, 5000);
    }
</script>
