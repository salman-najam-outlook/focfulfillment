@using LocalDropshipping.Web.Data.Entities;
@model List<Product>;
@{
    ViewData["Title"] = "Product Listing";
}


<div class="page-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card card-table">
                    <div class="card-body">
                        <div class="title-header option-title d-sm-flex d-block">
                            <h5>Products List</h5>
                            <div class="right-options">
                                <ul>
                                    <li>
                                        @*<a href="javascript:void(0)">import</a>*@
                                    </li>
                                    <li>
                                        @*<a href="javascript:void(0)">Export</a>*@
                                    </li>
                                    <li>
                                       
                                        <a class="btn btn-solid btn-primary" href="Product/Post">Add Product</a>
                                    </li>
                                    @*<a href="h:\tetrasol\projects\localdropshipping\localdropshipping\localdropshipping.web\views\product\post.cshtml">h:\tetrasol\projects\localdropshipping\localdropshipping\localdropshipping.web\views\product\post.cshtml</a>*@
                                </ul>
                            </div>
                        </div>
                        <div>
                            <div class="table-responsive">
                                <table class="table all-package theme-table table-product" id="table_id">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Description</th>
                                            <th>Price</th>
                                            <th>ImageLink</th>
                                            <th>Stock</th>
                                            <th>IsFeatured</th>
                                            <th>CategoryId</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var product in Model)
                                        {
                                            <tr>
                                                <td>@product.Name</td>
                                                <td>>@product.Description</td>
                                                <td>@product.Price/- Rs</td>
                                                <td>@product.ImageLink</td>
                                                <td>@product.Stock</td>
                                                <td>@product.IsFeatured</td>
                                                <td>@product.Category!.Name</td>

                                                <td class="status-danger">
                                                    <span>Pending</span>
                                                </td>

                                                <td>
                                                    <ul>
                                                        <li>
                                                            <a href="order-detail.html">
                                                                <i class="ri-eye-line"></i>
                                                            </a>
                                                        </li>

                                                        <li>
                                                            <a href="javascript:void(0)">
                                                                <i class="ri-pencil-line"></i>
                                                            </a>
                                                        </li>

                                                        <li>
                                                            <a href="javascript:void(0)" data-bs-toggle="modal"
                                                               data-bs-target="#exampleModalToggle">
                                                                <i class="ri-delete-bin-line"></i>
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->

    <div class="container-fluid">
        <!-- footer start-->
        <footer class="footer">
            <div class="row">
                <div class="col-md-12 footer-copyright text-center">
                    <p class="mb-0">Copyright 2022 © Fastkart theme by pixelstrap</p>
                </div>
            </div>
        </footer>
    </div>
</div>